proc times_table {x} {
    puts "Multiplication table for $x."
    for {set i 1} {$i <= 10} {incr i} {
        set answer [expr {$x * $i}]
        puts "$x times $i = $answer"
    }
}
proc run_table {} {
    puts -nonewline "Enter a number: "
    flush stdout
    set x [gets stdin]
    set x [expr {$x + 0}]
    times_table $x
}
run_table
